<%= simple_form_for([current_team, @match], :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= f.error_messages %>

  <%= f.input :date_string, :label => 'What day?', :input_html => { :class => 'datepicker' } %>
  <%= f.input :time_string, :as => :time_select, :label => 'What time?' %>
  <%= f.input :home_team, :hint => 'uncheck if your team is the Away team' %>
  <%= f.input :location, :input_html => { :rows => '3',  :class => 'span4' }, :hint => 'include club name and address' %>
  <%= f.input :comment, :input_html => { :rows => '10', :class => 'span4' }, :hint => 'provide any additional information here' %>

  <div class="form-actions">
    <%= f.submit 'Save match', :class => 'btn btn-primary' %>
  </div>
<% end %>

