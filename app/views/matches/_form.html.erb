<%= simple_form_for(@match, :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= f.error_messages %>

  <%= f.input :date_string, :label => 'What day?', :input_html => { :class => 'datepicker' } %>
  <%= f.input :time_string, :as => :time_select, :label => 'What time?' %>
  <%= f.input :location, :collection => Match::LOCATIONS, :label_method => :humanize, :value_method => :to_s %>
  <%= f.input :opponent %>

  <%= hidden_field_tag :team_id, @match.team_id if @match.new_record? %>
  <div class="form-actions">
    <%= f.submit 'Save match', :class => 'btn btn-primary' %>
  </div>
<% end %>

