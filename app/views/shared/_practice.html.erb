<table>
  <tr>
    <td style="vertical-align: top;">When:</td>
    <td style="width: 20px">&nbsp;</td>
    <td><%= l practice.date, :format => :long %></td>
  </tr>
  <% if practice.location.present? %>
    <tr><td colspan="3"><br></td></tr>
    <tr>
      <td style="vertical-align: top;">Where:</td>
      <td style="width: 20px">&nbsp;</td>
      <td>
        <%= simple_format(practice.location) %>
      </td>
    </tr>
  <% end %>
  <% if practice.comment.present? %>
    <tr><td colspan="3"><br></td></tr>
    <tr>
      <td style="vertical-align: top;">Comments:</td>
      <td style="width: 20px">&nbsp;</td>
      <td><%= simple_format(practice.comment) %></td>
    </tr>
  <% end %>
</table>

