<div class="row">
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-3">
        <label>When:</label>
      </div>
      <div class="col-md-9">
        <p><%= l practice.date, :format => :long %></p>
      </div>
    </div>
    <% if practice.location.present? %>
      <div class="row">
        <div class="col-md-3">
          <label>Where:</label>
        </div>
        <div class="col-md-9">
          <%= simple_format(practice.location) %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-7">
    <% if practice.comment.present? %>
      <div class="row">
        <div class="col-md-2">
          <label>Comments:</label>
        </div>
        <div class="col-md-10">
          <%= simple_format(practice.comment) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

