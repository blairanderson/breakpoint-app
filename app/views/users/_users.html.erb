<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <% if can? :manage, users %>
        <th style="width: 82px;">&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= mail_to user.email %></td>
      <td><%= user.phone_number %></td>
      <% if can? :manage, user %>
        <td>
          <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to 'Delete',
            user,
            :data => { :confirm => 'Are you sure?' },
            :method => :delete,
            :id => "user-#{user.id}",
            :class => 'btn btn-mini btn-danger' %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>