<% title "Players for #{@season.name}" %>

<%= form_tag season_players_path, :method => :put, :class => 'form-horizontal' do %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <label class="checkbox">
            <%= check_box_tag 'player_ids[]', user.id, @players.include?(user), :id => "player_id_#{user.id}" %>
            <%= user.name %>
          </label>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag 'Save Players', :class => 'btn btn-primary' %>
<% end %>