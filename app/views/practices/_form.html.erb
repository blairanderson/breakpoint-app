<%= simple_form_for(@practice, :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= f.error_messages %>

  <%= f.input :date_string, :label => 'What day?', :input_html => { :class => 'datepicker' } %>
  <div class="control-group">
    <label class="control-label" for="practice_time_string">
      <abbr title="required">*</abbr>
      What time?
    </label>
    <div class="controls">
      <div class="input-append bootstrap-timepicker">
        <%= f.text_field :time_string, :class => 'timepicker' %>
        <span class="add-on"><i class="icon-time"></i></span>
      </div>
    </div>
  </div>
  <%= f.input :location, :input_html => { :rows => '3' }, :hint => 'include club name and address' %>
  <%= f.input :comment, :input_html => { :rows => '3' }, :hint => 'provide any additional information here' %>

  <%= hidden_field_tag :team_id, @practice.team_id if @practice.new_record? %>
  <div class="form-actions">
    <%= f.submit 'Save practice', :class => 'btn btn-primary' %>
  </div>
<% end %>

