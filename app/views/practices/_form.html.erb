<%= simple_form_for([current_team, @practice]) do |f| %>
  <%= f.error_messages %>

  <div class="row">
    <div class="col-md-3">
      <%= f.input :date_string, :label => 'What day?', :input_html => { :class => 'datepicker' } %>
      <%= f.input :time_string, :label => 'What time?', :input_html => { :class => 'timepicker' } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :location, :input_html => { :rows => '3', :class => 'span4' }, :hint => 'include club name and address' %>
      <%= f.input :comment, :input_html => { :rows => '10', :class => 'span4' }, :hint => 'provide any additional information here' %>
    </div>
  </div>

  <%= f.submit 'Save practice', :class => 'btn btn-primary' %>
  <% if !@practice.new_record?  %>
    <%= link_to 'Delete practice',
                  team_practice_path(current_team, @practice),
                  :data => { :confirm => 'Are you sure?' },
                  :method => :delete,
                  :class => 'btn btn-danger' %>
  <% end %>
<% end %>

