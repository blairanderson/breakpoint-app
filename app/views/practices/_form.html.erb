<%= simple_form_for(@practice, :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= f.error_messages %>

  <%= f.input :date_string, :label => 'What day?', :input_html => { :class => 'datepicker' } %>
  <%= f.input :time_string, :as => :time_select, :label => 'What time?' %>
  <%= f.input :comment, :input_html => { :rows => '3' } %>

  <%= hidden_field_tag :team_id, @practice.team_id if @practice.new_record? %>
  <div class="form-actions">
    <%= f.submit 'Save practice', :class => 'btn btn-primary' %>
  </div>
<% end %>

