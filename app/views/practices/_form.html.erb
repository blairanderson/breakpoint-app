<%= simple_form_for(@practice, :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= f.error_messages %>

  <%= f.input :date_string,
    :as => :string,
    :label => 'When?',
    :hint => 'e.g. January 5 at 7pm &ndash; or &ndash; tomorrow at 8pm' %>
  <%= f.input :comment, :input_html => { :rows => '3' } %>

  <%= hidden_field_tag :season_id, @practice.season_id if @practice.new_record? %>
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>

