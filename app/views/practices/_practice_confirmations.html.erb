<a href="#practice-<%= practice.id %>" data-toggle="modal">Who can play?</a>
<div class="modal hide" id="practice-<%= practice.id %>">
  <% if practice.available_players.empty? %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>There are no confirmed players yet.</h3>
    </div>
  <% else %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>Confirmed players</h3>
    </div>
    <div class="modal-body">
      <%= render :partial => 'team_members/team_members', :object => practice.available_players %>
    </div>
  <% end %>
</div>

