<% title 'Sign in' %>

<div class="row">
  <div class="col-md-3">
    <%= simple_form_for(resource,
      :as => resource_name,
      :url => session_path(resource_name),
      :html => { class: 'sign-in' }) do |f| %>

      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
      <%= f.input :remember_me, :as => :boolean, label: false, inline_label: 'Remember me' %>

      <%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <h3>Need help signing in?</h3>
    <div class="panel-group" id="sign-in-help">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#sign-in-help" href="#forgot-password">
              Don't know your password?
            </a>
          </h4>
        </div>
        <div id="forgot-password" class="panel-collapse collapse">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-9">
                <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f| %>
                  <%= f.error_messages %>
                  <%= f.input :email, :required => true %>

                  <%= f.button :submit, 'Send me reset password instructions', :class => 'btn btn-primary btn-block' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#sign-in-help" href="#forgot-email">
              Don't know your email?
            </a>
          </h4>
        </div>
        <div id="forgot-email" class="panel-collapse collapse">
          <div class="panel-body">
            If your account was created by your team captain, please verify with them the email address used.
            <br>
            If you are unsure, please <%= mail_to "support@breakpointapp.com", "email support" %>. We'd love to help!
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#sign-in-help" href="#no-account">
              Don't have an account?
            </a>
          </h4>
        </div>
        <div id="no-account" class="panel-collapse collapse">
          <div class="panel-body">
            Normally, your team captain will create an account for you. Please verify with them first to be sure this is not the case.
            <br>
            Otherwise, <%= link_to 'create a new account', new_user_registration_path %>.
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#sign-in-help" href="#need-support">
              Having other problems?
            </a>
          </h4>
        </div>
        <div id="need-support" class="panel-collapse collapse">
          <div class="panel-body">
            We're sorry. Let's fix this!
            <br>
            Please <%= mail_to "support@breakpointapp.com", "email support" %> and we'll help you right away.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

